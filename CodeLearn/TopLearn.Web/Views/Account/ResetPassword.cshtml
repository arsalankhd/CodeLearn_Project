@using Microsoft.AspNetCore.Mvc.TagHelpers
@model CodeLearn.Core.DTOs.Users.ResetPasswordViewModel
@{
    ViewData["Title"] = "بازیابی کلمه عبور";
}

<nav aria-label="breadcrumb">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">کد لرن</a></li>
        <li class="breadcrumb-item active" aria-current="page">بازیابی کلمه عبور</li>
    </ul>
</nav>

<main class="client-page">
    <div class="container-content">
        <header><h2> بازیابی کلمه عبور </h2></header>

        <div class="form-layer">
            <form asp-action="ResetPassword" method="post">
                <input type="hidden" asp-for="ActiveCode" />
                <div class="input-group">
                    <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                    <input asp-for="Password" type="password" class="form-control" placeholder="کلمه عبور " aria-describedby="password">
                </div>
                <div class="input-group">
                    <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                    <input asp-for="RePassword" type="password" class="form-control" placeholder="تکرار کلمه عبور " aria-describedby="password">
                </div>
                <div asp-validation-summary="All" class="text-danger">
                </div>
                <button class="btn btn-success"> ثبت تغییرات </button>
            </form>
        </div>
    </div>
</main>