@page
@using CodeLearn.Core.Convertors
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model CodeLearn.Web.Pages.Admin.Users.ListDeleteUsersModel
@{
    ViewData["Title"] = "لیست کاربران حذف شده";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست کاربران حذف شده</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست کاربران حذف شده سایت
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="row">
                            <form>
                                <div class="col-sm-5 col-md-5">
                                    <input type="text" name="filterUserName" class="form-control" placeholder="نام کاربری" />
                                </div>
                                <div class="col-sm-5 col-md-5">
                                    <input type="text" name="filterEmail" class="form-control" placeholder="ایمیل" />
                                </div>
                                <div class="col-sm-2 col-md-2">
                                    <div class="row">
                                        <button type="submit" class="btn btn-info">جستجو</button>
                                        <a href="/Admin/Users" class="btn btn-default">بروزرسانی</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" style="margin-top: 10px" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>نام کاربری</th>
                                    <th>ایمیل</th>
                                    <th>وضعیت</th>
                                    <th>تاریخ ثبت نام</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.UserForAdminViewModel.Users)
                                {
                                    <tr>
                                        <td>@user.UserName</td>
                                        <td>@user.Email</td>
                                        <td>
                                            @if (user.IsActive)
                                            {
                                                <p class="text-success">فعال</p>
                                            }
                                            else
                                            {
                                                <p class="text-danger">غیر فغال</p>
                                            }
                                        </td>
                                        <td>@user.RegisterDate.ToShamsi()</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                                    <ul class="pagination">
                                        @for (int i = 1; i <= Model.UserForAdminViewModel.PageCount; i++)
                                        {
                                            <li class="paginate_button @((i==Model.UserForAdminViewModel.CurrentPage)?"active":"")" aria-controls="dataTables-example" tabindex="0">
                                                <a href="/Admin/Users?pageId=@i">@i</a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>