@page
@model CodeLearn.Web.Pages.Admin.Courses.IndexModel
@{
    ViewData["Title"] = "لیست دوره ها";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست دوره ها</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست دوره های سایت
            </div>
            <div class="panel-body">
                <div class="col-md-12" style="margin: 10px 0;">
                    <a asp-page="CreateCourse" class="btn btn-outline btn-success">افزودن دوره جدید</a>
                </div>
                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                    <thead>
                        <tr>
                            <th>تصویر دوره</th>
                            <th>عنوان دوره</th>
                            <th>تعداد جلسات</th>
                            <th>دستورات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ListCourse)
                        {
                            <tr>
                                <td>
                                    <img src="/course/thumb/@item.CourseImageName" class="thumbnail" />
                                </td>
                                <td>
                                    @item.CourseTitle
                                </td>
                                <td>
                                    @item.EpisodeCount
                                </td>
                                <td>
                                    <a href="/Admin/Courses/EditCourse/@item.CourseId" class="btn btn-warning btn-sm">
                                        ویرایش
                                    </a>
                                    <a href="/Admin/Courses/DeleteCourse/@item.CourseId" class="btn btn-danger btn-sm">
                                        حذف
                                    </a>
                                    <a href="/Admin/Courses/IndexEpisode/@item.CourseId" class="btn btn-info btn-sm">
                                        بخش ها
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>