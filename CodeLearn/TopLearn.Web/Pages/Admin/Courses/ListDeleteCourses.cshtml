@page
@model CodeLearn.Web.Pages.Admin.Courses.ListDeleteCoursesModel
@{
    ViewData["Title"] = "لیست دوره های حذف شده";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست دوره های حذف شده</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست دوره های حذف شده سایت
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                    <thead>
                        <tr>
                            <th>تصویر دوره</th>
                            <th>عنوان دوره</th>
                            <th>تعداد جلسات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ListCourse)
                        {
                            <tr>
                                <td>
                                    <img src="/course/thumb/@item.CourseImageName" class="thumbnail" />
                                </td>
                                <td>
                                    @item.CourseTitle
                                </td>
                                <td>
                                    @item.EpisodeCount
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>