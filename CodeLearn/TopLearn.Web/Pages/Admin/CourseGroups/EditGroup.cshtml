@page "{id}"
@model CodeLearn.Web.Pages.Admin.CourseGroups.EditGroupModel
@{
    ViewData["Title"] = "ویرایش گروه";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">ویرایش گروه</h1>
    </div>
</div>

<div class="row">
    <form method="post">
        <input type="hidden" asp-for="CourseGroup.GroupId" />
        <input type="hidden" asp-for="CourseGroup.ParentId" />
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    ویرایش گروه
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label>عنوان گروه</label>
                        <input type="text" asp-for="CourseGroup.GroupTitle" class="form-control" />
                    </div>
                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />
                </div>
            </div>
        </div>
    </form>
</div>