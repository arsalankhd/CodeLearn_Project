@page
@using CodeLearn.Core.Convertors
@model CodeLearn.Web.Pages.Admin.Discount.IndexModel
@{
    ViewData["Title"] = "کد های تخفیف";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست کد های تخفیف</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست کد های تخفیف سایت
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="col-md-12" style="margin: 10px 0;">
                            <a asp-page="CreateDiscount" class="btn btn-outline btn-success">افزودن کد جدید</a>
                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>کد</th>
                                    <th>درصد</th>
                                    <th>تعداد</th>
                                    <th>تاریخ شروع</th>
                                    <th>تاریخ پایان</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var discount in Model.Discounts)
                                {
                                    <tr>
                                        <td>@discount.DiscountCode</td>
                                        <td>@discount.DiscountPercent</td>
                                        <td>@discount.UsableCount</td>
                                        <td>@((discount.StartDate!=null)?discount.StartDate.Value.ToShamsi():"")</td>
                                        <td>@((discount.EndDate!=null)?discount.EndDate.Value.ToShamsi():"")</td>
                                        <td>
                                            <a href="/Admin/Discount/EditDiscount/@discount.DiscountId" class="btn btn-warning">
                                                ویرایش
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>